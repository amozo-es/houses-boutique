---
// Footer Credit Component
// Shows repository info and creator credits

interface Props {
  showGithub?: boolean;
  creatorName?: string;
  creatorUrl?: string;
  repositoryUrl?: string;
}

const {
  showGithub = true,
  creatorName = "Alejandro Mozo",
  creatorUrl = "https://amozo.es",
  repositoryUrl = "https://github.com/amozo-es/houses-boutique"
} = Astro.props;
---

<footer class="bg-neutral-900 text-neutral-300 py-8 border-t border-neutral-800">
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
      <!-- Creator Credit -->
      <div class="flex items-center space-x-2">
        <span class="text-sm">
          Theme created with ❤️ by
          <a
            href={creatorUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="text-primary hover:text-primary-soft transition-colors font-medium"
          >
            {creatorName}
          </a>
        </span>
      </div>

      <!-- Repository Link -->
      {showGithub && (
        <div class="flex items-center space-x-2">
          <a
            href={repositoryUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center space-x-2 text-sm bg-neutral-800 hover:bg-neutral-700 px-4 py-2 rounded-lg transition-colors"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            <span>View on GitHub</span>
          </a>
        </div>
      )}

      <!-- Usage Info -->
      <div class="text-xs text-neutral-500">
        <span>Available as open-source theme</span>
      </div>
    </div>

    <!-- Additional Info -->
    <div class="mt-6 pt-6 border-t border-neutral-800 text-center">
      <p class="text-xs text-neutral-400">
        Built with <span class="text-primary">Astro</span> & <span class="text-primary">Tailwind CSS</span>
      </p>
    </div>
  </div>
</footer>

<style>
  .text-primary {
    color: #64748b;
  }

  .text-primary:hover {
    color: #8b5cf6;
  }

  .text-primary-soft {
    color: #a78bfa;
  }
</style>